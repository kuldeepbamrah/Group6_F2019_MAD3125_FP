<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView android:layout_height="match_parent"
        android:background="@color/lightcolor"
        android:layout_width="match_parent">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightcolor"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/view1">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:padding="5dp"
            android:text="Please Enter Values to Add Employee"
            android:textColor="@android:color/background_light"
            android:textSize="20dp">


        </TextView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/text1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:padding="5dp"
                android:textSize="15dp"
                android:text="Enter Employee ID" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                android:background="@color/cardview_dark_background"
                android:layout_marginRight="10dp">


                <EditText
                    android:id="@+id/editTextEmpID"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/cardview_dark_background"
                    android:clickable="false"
                    android:inputType="number"
                    android:singleLine="true" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>


        // first text box ends here

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:padding="5dp"
                android:textSize="15dp"
                android:text="Enter Employee Full Name" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                android:background="@color/cardview_dark_background"

                android:layout_marginRight="10dp">


                <EditText
                    android:id="@+id/editTextEmpfname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:backgroundTint="@color/cardview_dark_background"/>

            </androidx.cardview.widget.CardView>


        </LinearLayout>


        // first text box ends here



        // first text box ends here

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:padding="5dp"
                android:textSize="15dp"
                android:text="Enter Employee Age" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                android:background="@color/cardview_dark_background"

                android:layout_marginRight="10dp">


                <EditText
                    android:inputType="number"
                    android:id="@+id/editTextEmpage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:backgroundTint="@color/cardview_dark_background"/>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        // first text box ends here

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:padding="5dp"
                android:textSize="15dp"
                android:text="Enter Employee Type" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                android:background="@color/cardview_dark_background"

                android:layout_marginRight="10dp">


                <EditText
                    android:id="@+id/editTextEmpType"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:backgroundTint="@color/cardview_dark_background"
                    android:focusable="false"/>

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    />

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        //Commision based Part time

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/CommisionBasedPartTime"
            android:visibility="gone"
            >


            <TextView
                android:id="@+id/text7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:padding="5dp"
                android:textSize="15dp"
                android:text="Enter Hours Worked" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                android:background="@color/cardview_dark_background"

                android:layout_marginRight="10dp">


                <EditText
                    android:id="@+id/editTextHoursWorked"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:inputType="number"
                    android:backgroundTint="@color/cardview_dark_background"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/text8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:padding="5dp"
                android:textSize="15dp"
                android:text="Enter Hourly Rate" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"

                android:background="@color/cardview_dark_background"

                android:layout_marginRight="10dp">


                <EditText
                    android:id="@+id/editTextHrate"
                    android:inputType="numberDecimal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:backgroundTint="@color/cardview_dark_background"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:padding="5dp"
                android:textSize="15dp"
                android:text="Enter Commision Percentage" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                android:background="@color/cardview_dark_background"

                android:layout_marginRight="10dp">


                <EditText
                    android:id="@+id/editTextCommision"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:backgroundTint="@color/cardview_dark_background"/>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        //Intern View
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/Intern"
            android:visibility="gone">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:padding="5dp"
                android:textSize="15dp"
                android:text="Enter Employee School Name" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                android:background="@color/cardview_dark_background"

                android:layout_marginRight="10dp">


                <EditText
                    android:id="@+id/editTextEmpSchoolName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:backgroundTint="@color/cardview_dark_background"/>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        //Fixed based Part time view
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/FixedBasedPartTime"
            android:visibility="gone">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:padding="5dp"
                android:textSize="15dp"
                android:text="Enter Hours Worked" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                android:background="@color/cardview_dark_background"

                android:layout_marginRight="10dp">


                <EditText
                    android:id="@+id/editTextHoursWorkedFT"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:backgroundTint="@color/cardview_dark_background"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:padding="5dp"
                android:textSize="15dp"
                android:text="Enter Hourly Rate" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                android:background="@color/cardview_dark_background"

                android:layout_marginRight="10dp">


                <EditText
                    android:id="@+id/editTextHrateFT"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:backgroundTint="@color/cardview_dark_background"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:padding="5dp"
                android:textSize="15dp"
                android:text="Enter Fixed Amount" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                android:background="@color/cardview_dark_background"

                android:layout_marginRight="10dp">


                <EditText
                    android:id="@+id/editTextFixed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:backgroundTint="@color/cardview_dark_background"/>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

        //Full time view
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:id="@+id/FullTime"
            android:visibility="gone">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:padding="5dp"
                android:textSize="15dp"
                android:text="Enter Salary" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                android:background="@color/cardview_dark_background"

                android:layout_marginRight="10dp">


                <EditText
                    android:id="@+id/editTextSalary"
                    android:inputType="numberDecimal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:backgroundTint="@color/cardview_dark_background"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:padding="5dp"
                android:textSize="15dp"
                android:text="Enter Bonus" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                android:background="@color/cardview_dark_background"

                android:layout_marginRight="10dp">


                <EditText
                    android:id="@+id/editTextBonus"
                    android:inputType="numberDecimal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:backgroundTint="@color/cardview_dark_background"/>

            </androidx.cardview.widget.CardView>




        </LinearLayout>




        <Button
            android:id="@+id/addCustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorAccent"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Click to Add Customer"
            android:textColor="@android:color/background_light"
            android:textSize="20dp"></Button>


    </LinearLayout>
</ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
